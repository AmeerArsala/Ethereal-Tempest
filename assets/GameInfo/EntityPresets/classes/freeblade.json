          /*
            if (strikeIsCrit) {
              critical();
            } else {
              if (strikeIsFollowup) {
                followup();
              } else {
                attack();
              }
            }

            if (!nextStrikeExists || !nextStrikeIsUser) {
              retreat();
            }
          */
          "IF": {
            "conditions": [ "Strike is Crit" ],
            "is": true
          },
          "THEN": {
            "actions": [
              {
                "action": {
                  "animationJsonPath": "phase_animations\\critical.json",
                  "type": "Spritesheet"
                },
                "mirror": false,
                "concurrent": false,
                "isAttack": true
              }
            ]
          },
          "ELSE": {
            "IF": {
              "conditions": [ "Strike is Followup" ],
              "is": true
            },
            "THEN": {
              "actions": [
                {
                  "action": {
                    "animationJsonPath": "phase_animations\\followup.json",
                    "type": "Spritesheet"
                  },
                  "mirror": false,
                  "concurrent": false,
                  "isAttack": true
                }
              ]
            },
            "ELSE": {
              "actions": [
                {
